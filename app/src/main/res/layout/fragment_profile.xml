<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/profile_tv"
            android:text="Profile"
            android:layout_marginTop="10dp"
            style="@style/CustomFontTextAppearance2"

            android:textSize="28sp"
            android:textColor="@color/black"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/storenametextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="0dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_font"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"


            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            android:hint="Name of your Store">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextAppearance2"
                android:id="@+id/store_name_edit_text"

                />

        </com.google.android.material.textfield.TextInputLayout>









        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contactnumtextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintStart_toStartOf="@id/storenametextField"
            app:layout_constraintTop_toBottomOf="@id/storenametextField"

            app:layout_constraintEnd_toEndOf="@id/storenametextField"

            android:layout_width="0dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_font"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"


            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            android:hint="Store contact no.">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextAppearance2"
                android:id="@+id/contact_num_edit_text"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailtextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintStart_toStartOf="@id/contactnumtextField"
            app:layout_constraintTop_toBottomOf="@id/contactnumtextField"

            app:layout_constraintEnd_toEndOf="@id/contactnumtextField"

            android:layout_width="0dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_font"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"


            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextAppearance2"
                android:id="@+id/email_edit_text"

                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addresstextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintStart_toStartOf="@id/emailtextField"
            app:layout_constraintTop_toBottomOf="@id/emailtextField"

            app:layout_constraintEnd_toEndOf="@id/emailtextField"

            android:layout_width="0dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_font"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"


            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            android:hint="Address">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextAppearance2"
                android:id="@+id/address_edit_text"

                />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/upiidtextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintStart_toStartOf="@id/addresstextField"
            app:layout_constraintTop_toBottomOf="@id/addresstextField"

            app:layout_constraintEnd_toEndOf="@id/addresstextField"

            android:layout_width="0dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_font"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"


            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            android:hint="UPI ID(to generate UPI QR)">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextAppearance2"
                android:id="@+id/upi_id_edit_text"

                />

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_field"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintStart_toStartOf="@id/upiidtextField"
            app:layout_constraintTop_toBottomOf="@id/upiidtextField"
            app:layout_constraintEnd_toEndOf="@id/upiidtextField"
            android:layout_width="0dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_font"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"


            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextAppearance2"
                android:id="@+id/password_edit_text"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_changes_btn"
            app:layout_constraintTop_toBottomOf="@id/password_field"
            app:layout_constraintStart_toStartOf="@id/password_field"
            app:layout_constraintEnd_toEndOf="@id/password_field"
            android:layout_marginTop="30dp"
            android:text="Save"
            android:textSize="25sp"
            android:padding="8dp"
            app:cornerRadius="8dp"
            android:textAppearance="@style/CustomFontTextAppearance2"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>